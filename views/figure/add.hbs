<h1>Add new product</h1>

<div class="container">
    <form action="/figure/add" method="post">
        <label for="">Product Name</label>
        <input type="text" id="" name="name" id="" required>

        <label for="">Product Price</label>
        <input type="text" id="" name="price" id="" required minlength="3">

        Product brand: <br>
        <select name="brand">
            {{#each brands }}
            <option value="{{ _id }}"> {{ brandName }}</option>
            {{/each}}
        </select>

        Product color: <br>
        <select name="color">
            {{#each colors }}
            <option value="{{ _id }}"> {{ name }}</option>
            {{/each}}
        </select>

        <label for="">Image</label>
        <input type="url" id="" name="image" id="" required>

        <input type="submit" value="Add">
    </form>
</div>

<style>
    body {
        font-family: Arial, Helvetica, sans-serif;
    }

    * {
        box-sizing: border-box;
    }

    input[type=url],
    input[type=text],
    select,
    textarea {
        width: 100%;
        padding: 12px;
        border: 1px solid #ccc;
        border-radius: 4px;
        box-sizing: border-box;
        margin-top: 6px;
        margin-bottom: 16px;
        resize: vertical;
    }

    input[type=submit] {
        background-color: #04AA6D;
        color: white;
        padding: 12px 20px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }

    input[type=submit]:hover {
        background-color: #45a049;
    }

    .container {
        border-radius: 5px;
        background-color: #f2f2f2;
        padding: 20px;
    }
</style>