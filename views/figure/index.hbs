<h2>Brand Management</h2>
<div class="table-wrapper">
    <table class="fl-table">
        <thead>
            <tr>
                <th>Figure model</th>
                <th>Figure price</th>
                <th>Figure brand</th>
                <th>Figure color</th>
                <th>Figure image</th>
                <th>Video</th>
                <th>Options</th>
            </tr>
        </thead>
        <tbody>
            {{#each figures }}
            <tr>
                <td>{{ name }}</td>
                <td>{{ price }}</td>
                <td>{{ brand.brandName }}</td>
                <td>{{ color.name }}</td>
                <td>
                    <img src="{{ image }}" alt="" width="100" height="120">
                </td>
                <td>

                </td>
                <td>
                    <a class="button-3" href="/figure/edit/{{ _id }}">Edit</a>
                    <a class="button-3" href="/figure/delete/{{ _id }}"
                        onclick="return confirm('Are you sure to delete this product ?');">Delete</a>
                </td>
            </tr>
            {{/each}}
        <tbody>
    </table>
</div>

<div style="background-color:white;color:white;padding:20px 80px;">
    <a class="button-3" href="/figure/add">Add new products</a>
    <a class="button-3" href="/brand/deleteall">Delete all</a>
</div>